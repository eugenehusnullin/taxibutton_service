<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="tb.domain.order">
	<class name="OfferedOrderBroker" table="offeredorderbrokers">
		<id name="id">
			<generator class="identity" />
		</id>
		<many-to-one name="order" class="tb.domain.order.Order" cascade="delete">
			<column name="orderId" />
		</many-to-one>
		<many-to-one name="broker" class="tb.domain.Broker" cascade="delete">
			<column name="brokerId" />
		</many-to-one>
		<property name="timestamp"></property>
	</class>
</hibernate-mapping>