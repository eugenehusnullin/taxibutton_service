<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="tb2014.domain.order">
	<class name="OrderAcceptAlacrity" table="orderacceptalacrity">
		<composite-id>
			<key-many-to-one name="broker" column="brokerId"></key-many-to-one>
			<key-many-to-one name="order" column="orderId"></key-many-to-one>
		</composite-id>
		<property name="date" />
		<component name="driver" class="tb2014.domain.order.Driver"
			insert="true" update="true" access="field">
			<property name="name" />
			<property name="secondName"/>
			<property name="thirdName" />
			<property name="phone"/>
		</component>
		<component name="car" class="tb2014.domain.order.Car"
			insert="true" update="true" access="field">
			<property name="number" />
			<property name="color" />
			<property name="mark"  />
			<property name="model" />
		</component>
	</class>
</hibernate-mapping>