<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="tb2014.domain.order">
	<class name="Order" table="orders">
		<id name="id">
			<generator class="identity" />
		</id>
		<many-to-one name="device" column="deviceId" />
		<many-to-one name="broker" column="brokerid" />
		<property name="uuid" unique-key="order_uk2" />
		<property name="urgent" />
		<property name="phone" length="20" />
		<property name="bookingDate" />
		<set name="requirements" cascade="all">
			<key>
				<column name="orderId" />
			</key>
			<one-to-many class="tb2014.domain.order.Requirement" />
		</set>
		<set name="destinations" cascade="all" lazy="false" sort="natural">
			<key column="orderId" />			
			<one-to-many class="tb2014.domain.order.AddressPoint" />
		</set>
		<set name="statuses" cascade="all" lazy="false" order-by="date desc">
			<key>
				<column name="orderId" />
			</key>
			<one-to-many class="tb2014.domain.order.OrderStatus" />
		</set>
		<set name="orderCancel" cascade="all">
			<key>
				<column name="orderId" />
			</key>
			<one-to-many class="tb2014.domain.order.OrderCancel" />
		</set>
		<set name="geoData" cascade="all">
			<key>
				<column name="orderId" />
			</key>
			<one-to-many class="tb2014.domain.order.GeoData" />
		</set>
		<set name="offerBrokerList" cascade="delete" table="offerbroker">
			<key>
				<column name="orderId" />
			</key>
			<many-to-many entity-name="tb2014.domain.Broker">
				<column name="brokerId" not-null="true" />
			</many-to-many>
		</set>
		<property name="orderVehicleClass">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">tb2014.domain.order.VehicleClass</param>
			</type>
		</property>
	</class>
</hibernate-mapping>